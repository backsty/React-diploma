# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript and JavaScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 80

# JSON files
[*.{json,jsonc}]
indent_size = 2

# CSS and SCSS files
[*.{css,scss,sass}]
indent_size = 2

# HTML files
[*.{html,htm}]
indent_size = 2

# Markdown files
[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# XML files
[*.{xml,svg}]
indent_size = 2

# Configuration files
[*.{conf,config,cfg}]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Python files (if any)
[*.py]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# Package files
[package.json]
indent_size = 2

# License and readme files
[{LICENSE,README,CHANGELOG,CONTRIBUTING}*]
trim_trailing_whitespace = false