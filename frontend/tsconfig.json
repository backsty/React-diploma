{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    
    // Дополнительные строгие проверки
    "noUncheckedIndexedAccess": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    
    // Типы для среды разработки
    "types": [
      "vite/client", 
      "node"
    ],
    
    // Пути для FSD структуры
    "baseUrl": ".",
    "paths": {
      // Основные слои FSD
      "@/*": ["src/*"],
      
      // App layer
      "@/app": ["src/app"],
      "@/app/*": ["src/app/*"],
      
      // Pages layer
      "@/pages": ["src/pages"],
      "@/pages/*": ["src/pages/*"],
      
      // Widgets layer
      "@/widgets": ["src/widgets"],
      "@/widgets/*": ["src/widgets/*"],
      
      // Features layer
      "@/features": ["src/features"],
      "@/features/*": ["src/features/*"],
      
      // Entities layer
      "@/entities": ["src/entities"],
      "@/entities/*": ["src/entities/*"],
      
      // Shared layer
      "@/shared": ["src/shared"],
      "@/shared/*": ["src/shared/*"],
      
      // Shared подслои
      "@/shared/ui": ["src/shared/ui"],
      "@/shared/ui/*": ["src/shared/ui/*"],
      "@/shared/lib": ["src/shared/lib"],
      "@/shared/lib/*": ["src/shared/lib/*"],
      "@/shared/config": ["src/shared/config"],
      "@/shared/config/*": ["src/shared/config/*"],
      "@/shared/store": ["src/shared/store"],
      "@/shared/store/*": ["src/shared/store/*"],
      
      // Assets
      "@/assets": ["src/assets"],
      "@/assets/*": ["src/assets/*"]
    }
  },
  
  // Файлы для компиляции
  "include": [
    "src/**/*",
    "src/**/*.tsx",
    "src/**/*.ts",
    "vite.config.ts",
    "src/vite-env.d.ts"
  ],
  
  // Исключения из компиляции
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "coverage",
    "public",
    "src/htmlTemplates--unused",
    "tmp",
    "temp",
    "*.log",
    ".vite",
    ".cache"
  ],
  
  "references": [],
  
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": [
      "**/node_modules",
      "**/dist",
      "**/build",
      "**/.vite"
    ]
  },
  
  "compileOnSave": false
}
