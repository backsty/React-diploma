{
  "name": "react-diploma-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Дипломный проект курса React - интернет-магазин обуви",
  "author": "backsty",
  "license": "MIT",
  "homepage": "https://backsty.github.io/React-diploma/",
  "repository": {
    "type": "git",
    "url": "https://github.com/backsty/React-diploma.git",
    "directory": "frontend"
  },
  "keywords": ["react", "typescript", "reatom", "e-commerce", "shoe-store", "vite", "bun"],
  "scripts": {
    "dev": "vite --open",
    "build": "tsc && vite build",
    "preview": "vite preview --port 4173",
    "start": "bun run dev",
    "deploy": "npm run build && cp dist/index.html dist/404.html",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "rimraf dist build .vite coverage"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.1.1",
    "@reatom/async": "^3.16.8",
    "@reatom/core": "^3.10.1",
    "@reatom/lens": "^3.12.0",
    "@reatom/logger": "^3.8.4",
    "@reatom/npm-react": "^3.10.6",
    "@reatom/persist-web-storage": "^3.4.6",
    "@reatom/primitives": "^3.11.0",
    "@reatom/undo": "^3.4.2",
    "@reatom/url": "^3.9.0",
    "@tanstack/react-virtual": "^3.13.12",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.0",
    "lodash.isequal": "^4.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.59.0",
    "react-hot-toast": "^2.5.2",
    "react-image": "^4.1.0",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "^7.6.3",
    "zod": "^3.25.73"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "imagemin-webp": "^8.0.0",
    "jsdom": "^26.1.0",
    "msw": "^2.10.3",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.2",
    "vite-bundle-analyzer": "^1.0.0",
    "vite-plugin-checker": "^0.9.3",
    "vite-plugin-eslint": "^1.8.1",
