{
  "name": "react-diploma-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Дипломный проект курса React - интернет-магазин обуви",
  "author": "backsty",
  "license": "MIT",
  "homepage": "https://backsty.github.io/React-diploma/",
  "repository": {
    "type": "git",
    "url": "https://github.com/backsty/React-diploma.git"
  },
  "keywords": ["react", "typescript", "reatom", "e-commerce", "shoe-store", "vite", "bun"],
  "scripts": {
    "dev": "vite --open",
    "build": "tsc && vite build",
    "preview": "vite preview --port 4173",
    "start": "bun run dev",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist build .vite",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "analyze": "vite-bundle-analyzer dist",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3",
    "react-hot-toast": "^2.5.2",
    "react-image": "^4.1.0",
    "react-hook-form": "^7.59.0",
    "react-intersection-observer": "^9.16.0",
    "@reatom/core": "^3.10.1",
    "@reatom/npm-react": "^3.10.6",
    "@reatom/persist-web-storage": "^3.4.6",
    "@reatom/async": "^3.16.8",
    "@reatom/lens": "^3.12.0",
    "@reatom/logger": "^3.8.4",
    "@reatom/primitives": "^3.11.0",
    "@reatom/url": "^3.9.0",
    "@reatom/undo": "^3.4.2",
    "@hookform/resolvers": "^5.1.1",
    "clsx": "^2.1.1",
    "@heroicons/react": "^2.2.0",
    "framer-motion": "^12.23.0",
    "@tanstack/react-virtual": "^3.13.12",
     "zod": "^3.25.73",
     "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.2",
    "vite-bundle-analyzer": "^1.0.0",
    "vite-plugin-checker": "^0.9.3",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-imagemin": "^0.6.1",
    "vite-plugin-pwa": "^1.0.1",
    "vitest": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^26.1.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "msw": "^2.10.3",
    "imagemin-webp": "^8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,html,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "esbuild",
    "sharp"
  ],
  "packageManager": "bun@1.2.18"
}